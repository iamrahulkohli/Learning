<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tuition.rahul.com.learning.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"

        android:text="Sign Out!"
        android:id="@+id/signout"
        android:background="#ff6466"
        android:shadowColor="#ff6466"
        android:elevation="@dimen/activity_vertical_margin"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Base.AlertDialog.AppCompat.Light"
android:layout_centerVertical="true"
        android:text="@string/go_to_bottom_bar"
        android:id="@+id/bottom"
        android:background="#ff6466"
        android:shadowColor="#ff6466"

        />

</RelativeLayout>
